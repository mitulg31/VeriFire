<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/background_white">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Your Emergency Contact"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the phone number of a trusted friend or family member. You can contact them for help directly from a spam message."
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/editTextEmergencyNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter phone number"
        android:inputType="phone"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/buttonSaveEmergencyNumber"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Save Contact"
        android:layout_marginTop="16dp"/>

</LinearLayout>
